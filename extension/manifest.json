{
    "manifest_version": 3,
    "name": "lemur",
    "version": "1.0",
    "description": "Make any website lovable",
    "action": {
        "default_popup": "ui/popup.html",
        "default_title": "Lemur - Make any website lovable"
      },
    "permissions": [
        "storage",
        "activeTab",
        "notifications",
        "contextMenus",
        "background",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "logic/background.js"
    },
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["logic/content.js"],
        "run_at": "document_end"
    }],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Open Lemur popup"
        }
    }
}

